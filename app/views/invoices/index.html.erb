<div class="col-10 text-center">
  <ul class="nav justify-content-center">
    <li class="nav-item">
      <%= link_to 'discounts', merchant_discounts_path(@merchant), class:
      "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to 'My Items', merchant_items_path(@merchant), class: "nav-link"
      %>
    </li>
    <li class="nav-item">
      <%= link_to 'My Invoices', merchant_invoices_path(@merchant), class:
      "nav-link" %>
    </li>
  </ul>  
  <br />
</div>
<div class="col-10 text-center">
  <h3><%= @merchant.name %></h3>
  <% @merchant.unique_invoices.each do |invoice| %>
    <p>Invoice #<%= link_to invoice.id, merchant_invoice_path(@merchant, invoice) %></p>
  <% end %>
</div>
